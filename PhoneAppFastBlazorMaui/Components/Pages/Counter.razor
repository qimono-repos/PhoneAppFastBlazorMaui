@page "/counter"

<h1>Counter</h1>

<p role="status">Current HEIGHT: @currentCount</p>
<p role="status">Current WIDTHGHT: @currentWidth</p>


<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
    <rect 
        x="25" y="15" 
        width=@currentWidth 
        height=@currentCount 
        fill="yellow" 
        stroke="blue" 
        stroke-width="2" 
        />
</svg>


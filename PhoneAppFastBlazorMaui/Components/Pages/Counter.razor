@page "/counter"

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
    <circle cx="50" cy="50" r=@currentCount fill="blue" />
</svg>

<img src="~/DrawImage.svg" alt="the draw img"/>

<br/>

@* <object data="~/favicon.png" type="image/svg+xml"></object> *@
<br />

<iframe src="~/favicon.png"></iframe>
<br />

<button class="btn btn-primary" @onclick="IncrementCount">Counter</button>

<button class="btn btn-primary" @onclick="CheckIntenet">Check Internet</button>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private async void CheckIntenet()
    {
        var hasInternet = Connectivity.Current.NetworkAccess == NetworkAccess.Internet;

        var internetType = Connectivity.Current.ConnectionProfiles.FirstOrDefault();

        await Application.Current.MainPage.DisplayAlert($"Internet", $"Status: {hasInternet} of type {internetType}", "Done");
    }
}

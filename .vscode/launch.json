{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Android",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have enabled SSL, make sure that the serverURL points to https://localhost:5001
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "program": "${workspaceFolder}/PhoneAppFastBlazorMaui/bin/Debug/net8.0-android/PhoneAppFastBlazorMaui.dll",
            "cwd": "${workspaceFolder}/PhoneAppFastBlazorMaui",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}